{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@interfaces/*": ["./interfaces/*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ESNext",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "eslint.config.js", "logger.ts", "tests/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "public"]
}
