{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "paths": {
      "@utils/*": ["./utils/*"],
      "@interfaces/*": ["./interfaces/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "include": ["src/*", "eslint.config.js", "logger.ts"],
  "exclude": ["node_modules"]
}
