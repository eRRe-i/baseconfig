{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "paths": {
      "@utils/*": ["./utils/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@data/*": ["./data/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "include": ["**/*.ts", "tests"]
}
